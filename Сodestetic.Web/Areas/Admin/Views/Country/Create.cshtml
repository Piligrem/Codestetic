@model CountryModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "country-form" }))
{
    <div class="section-header">
        <div class="title"><i class="icon icon-country"></i>@T("Admin.Configuration.Countries.AddNew") @Html.ActionLink("(" + T("Admin.Configuration.Countries.BackToList") + ")", "List")</div>
        <div class="options">
            <button type="submit" name="save" value="save" class="btn btn-primary"><i class="icon-ok icon-white"></i>&nbsp;@T("Admin.Common.Save")</button>
            <button type="submit" name="save" value="continueEditing" class="btn">@T("Admin.Common.SaveContinue")</button>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
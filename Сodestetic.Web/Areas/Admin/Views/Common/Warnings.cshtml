@model IList<SystemWarningModel>

<div class="admin-content align-center">
    <div class="admin-row-content">
        <div class="section-header">
            <div class="title"><i class="icon icon-exclamation-sign"></i>@T("Admin.System.Warnings").Text</div></div>
        <div class="system-warnings">
            <ul>
                @foreach (var warning in Model)
                {
                    <li>
                        @switch (warning.Level)
                        {
                            case SystemWarningLevel.Pass:
                                {
                                    <span class="pass">
                                        <i class="grid-icon grid-icon-check"></i>
                                        @warning.Text
                                    </span>
                                }
                                break;
                            case SystemWarningLevel.Warning:
                                {
                                    <span class="warning">
                                        <i class="grid-icon grid-icon-question-sign"></i>
                                        @warning.Text
                                    </span>
                                }
                                break;
                            case SystemWarningLevel.Fail:
                                {
                                    <span class="fail">
                                        <i class="grid-icon grid-icon-remove-sign"></i>
                                        @warning.Text
                                    </span>
                                }
                                break;
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
